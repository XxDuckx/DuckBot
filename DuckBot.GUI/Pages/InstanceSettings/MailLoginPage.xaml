<UserControl x:Class="DuckBot.GUI.Pages.InstanceSettings.MailLoginPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="10">
        <TextBlock Text="Mail Accounts" FontSize="16"/>
        <ListBox ItemsSource="{Binding MailAccounts}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBox Text="{Binding Email}" Width="200"/>
                        <TextBox Text="{Binding Password}" Width="200"/>
                        <TextBox Text="{Binding Emulator}" Width="100"/>
                        <TextBox Text="{Binding Pin}" Width="100"/>
                        <CheckBox IsChecked="{Binding Active}" Content="Active"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</UserControl>
