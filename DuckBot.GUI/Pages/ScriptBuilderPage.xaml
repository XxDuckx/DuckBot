<Page x:Class="DuckBot.GUI.Pages.ScriptBuilderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#1e1e1e"
      Foreground="White">

    <DockPanel Margin="10">
        <!-- Toolbar -->
        <StackPanel DockPanel.Dock="Left" Width="200" Background="#2d2d2d" Margin="5">
            <TextBlock Text="Script Builder" Margin="5"/>
            <Button Content="Add TAP" Margin="5" Click="OnAddTap"/>
            <Button Content="Add WAIT" Margin="5" Click="OnAddWait"/>
            <Button Content="Add INPUT" Margin="5" Click="OnAddInput"/>
            <Button Content="Save Script" Margin="5" Click="OnSaveScript"/>
            <Button Content="Load Script" Margin="5" Click="OnLoadScript"/>
        </StackPanel>

        <!-- Script list -->
        <ListBox x:Name="ScriptList"
                 DockPanel.Dock="Right"
                 Background="#1e1e1e"
                 Foreground="White"
                 Margin="10"
                 DisplayMemberPath="Type"/>
    </DockPanel>
</Page>

