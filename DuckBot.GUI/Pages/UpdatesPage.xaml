<UserControl x:Class="DuckBot.GUI.Pages.UpdatesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1e1e1e"
             Foreground="White">

	<Grid Margin="10">
		<StackPanel>
			<TextBlock Text="Latest Bot Updates"
                       FontSize="18" Margin="0,0,0,10"/>
			<ScrollViewer Height="400" VerticalScrollBarVisibility="Auto">
				<StackPanel>
					<TextBlock Text="8/5/2025" FontWeight="Bold" Margin="0,0,0,5"/>
					<TextBlock Text="Age of Origins: Updated steel mine and mineral mine. Added support for resource collection."
                               TextWrapping="Wrap" Margin="0,0,0,10"/>
					<TextBlock Text="Ant Legion: Bug fixes in march popup, duel opening timeout, merchant script improvements."
                               TextWrapping="Wrap" Margin="0,0,0,10"/>
					<TextBlock Text="KingShot: Coming soon."
                               TextWrapping="Wrap"/>
				</StackPanel>
			</ScrollViewer>
			<Button Content="Check For Updates"
                    Width="150" Margin="5" HorizontalAlignment="Center"/>
		</StackPanel>
	</Grid>
</UserControl>
