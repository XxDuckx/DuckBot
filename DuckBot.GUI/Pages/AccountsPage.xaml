<Page x:Class="DuckBot.GUI.Pages.AccountsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Accounts">
    <DockPanel>
        <DataGrid x:Name="AccountGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                <DataGridTextColumn Header="Password" Binding="{Binding Password}" Width="150"/>
                <DataGridTextColumn Header="Game" Binding="{Binding Game}" Width="150"/>
                <DataGridCheckBoxColumn Header="Tutorial Complete" Binding="{Binding TutorialComplete}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="5">
            <Button Content="Add Account" Margin="5" Click="OnAddAccount"/>
            <Button Content="Mark Tutorial Done" Margin="5" Click="OnMarkTutorial"/>
        </StackPanel>
    </DockPanel>
</Page>
