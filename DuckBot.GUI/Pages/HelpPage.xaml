<UserControl x:Class="DuckBot.GUI.Pages.HelpPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1e1e1e"
             Foreground="White">

	<Grid Margin="10">
		<StackPanel>
			<TextBlock Text="Do you need help setting the bot up?"
                       FontSize="18" Margin="0,0,0,10"/>
			<TextBlock Text="Contact us if you have any questions or issues:"
                       Margin="0,0,0,20"/>

			<WrapPanel>
				<Button Content="Website Home" Width="120" Margin="5"/>
				<Button Content="Email Support" Width="120" Margin="5"/>
				<Button Content="Community Chat" Width="120" Margin="5"/>
				<Button Content="Bug Report" Width="120" Margin="5"/>
				<Button Content="Guides" Width="120" Margin="5"/>
			</WrapPanel>
		</StackPanel>
	</Grid>
</UserControl>
