<Window x:Class="DuckBot.GUI.Windows.InstanceSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Instance Settings" Height="450" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Instance Name:"/>
            <TextBox x:Name="InstanceNameBox" Margin="0,5,0,10"/>

            <TextBlock Text="Emulator:"/>
            <ComboBox x:Name="EmulatorBox" Margin="0,5,0,10">
                <ComboBoxItem Content="LDPlayer"/>
                <ComboBoxItem Content="BlueStacks"/>
                <ComboBoxItem Content="Memu"/>
            </ComboBox>

            <TextBlock Text="Mail Account:"/>
            <TextBox x:Name="MailBox" Margin="0,5,0,10"/>
        </StackPanel>

        <GroupBox Header="Scripts" Grid.Row="1" Margin="0,0,0,10">
            <StackPanel>
                <ListBox x:Name="ScriptList" Height="200"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                    <Button Content="Add Script" Width="90" Margin="0,0,5,0" Click="OnAddScript"/>
                    <Button Content="Remove Script" Width="110" Click="OnRemoveScript"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right">
            <Button Content="Save" Width="80" Margin="0,0,5,0" Click="OnSave"/>
            <Button Content="Cancel" Width="80" Click="OnCancel"/>
        </StackPanel>
    </Grid>
</Window>
