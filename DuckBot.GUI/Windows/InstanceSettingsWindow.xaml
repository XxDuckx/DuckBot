<Window x:Class="DuckBot.GUI.Windows.InstanceSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Instance Settings"
        Height="600" Width="900"
        Background="#1e1e1e"
        Foreground="White"
        WindowStartupLocation="CenterOwner">

	<DockPanel>
		<!-- Tabs -->
		<TabControl x:Name="TabControl" DockPanel.Dock="Top">
			<!-- Scripts Tab -->
			<TabItem Header="Scripts">
				<Grid Background="#2d2d2d" Margin="5">
					<StackPanel Margin="10">
						<TextBlock Text="Scripts" FontSize="16" Margin="0,0,0,10"/>
						<ListBox x:Name="ScriptList" Background="#1e1e1e" Foreground="White" Height="250"/>
						<StackPanel Orientation="Horizontal" Margin="0,10,0,0">
							<Button Content="Add Script" Width="100" Margin="5" Click="OnAddScript"/>
							<Button Content="Remove Script" Width="120" Margin="5" Click="OnRemoveScript"/>
						</StackPanel>
						<Button Content="â–¶ Run Script" Width="120" Margin="5" Click="OnRunScript"/>
					</StackPanel>
				</Grid>
			</TabItem>

			<!-- Emulators Tab -->
			<TabItem Header="Emulators">
				<Grid Background="#2d2d2d" Margin="5">
					<StackPanel Margin="10">
						<TextBlock Text="Manage Emulators" FontSize="16" Margin="0,0,0,10"/>
						<ListBox x:Name="EmulatorList" Background="#1e1e1e" Foreground="White" Height="250"/>
						<StackPanel Orientation="Horizontal" Margin="0,10,0,0">
							<Button Content="Assign Emulator" Width="140" Margin="5" Click="OnAssignEmulator"/>
							<Button Content="Remove Emulator" Width="140" Margin="5" Click="OnRemoveEmulator"/>
						</StackPanel>
					</StackPanel>
				</Grid>
			</TabItem>

			<!-- Other Settings Tab -->
			<TabItem Header="Other Settings">
				<Grid Background="#2d2d2d" Margin="5">
					<StackPanel Margin="10">
						<TextBlock Text="Breaks &amp; Cooldowns" FontSize="16" Margin="0,0,0,10"/>
						<StackPanel Orientation="Horizontal" Margin="0,5,0,5">
							<TextBlock Text="Break Between (min-max minutes):" Width="250"/>
							<TextBox x:Name="BreakMinBox" Width="50"/>
							<TextBlock Text="-" Margin="5,0"/>
							<TextBox x:Name="BreakMaxBox" Width="50"/>
						</StackPanel>
						<CheckBox x:Name="StopAfterLoopBox" Content="Stop bot after full loop" Margin="0,5"/>
						<CheckBox x:Name="IgnoreCooldownsBox" Content="Ignore cooldowns" Margin="0,5"/>
					</StackPanel>
				</Grid>
			</TabItem>

			<!-- Mail Login Tab -->
			<TabItem Header="Mail Login">
				<Grid Background="#2d2d2d" Margin="5">
					<StackPanel Margin="10">
						<TextBlock Text="Mail Accounts" FontSize="16" Margin="0,0,0,10"/>
						<DataGrid x:Name="MailGrid" AutoGenerateColumns="False" Background="#1e1e1e" Foreground="White" Height="250">
							<DataGrid.Columns>
								<DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
								<DataGridTextColumn Header="Password" Binding="{Binding Password}" Width="*"/>
								<DataGridTextColumn Header="Emulator" Binding="{Binding Emulator}" Width="*"/>
								<DataGridTextColumn Header="Pin" Binding="{Binding Pin}" Width="*"/>
								<DataGridCheckBoxColumn Header="Active" Binding="{Binding Active}" Width="80"/>
							</DataGrid.Columns>
						</DataGrid>
						<StackPanel Orientation="Horizontal" Margin="0,10,0,0">
							<Button Content="Add Account" Width="120" Margin="5" Click="OnAddMail"/>
							<Button Content="Remove Account" Width="140" Margin="5" Click="OnRemoveMail"/>
						</StackPanel>
					</StackPanel>
				</Grid>
			</TabItem>
		</TabControl>

		<!-- Bottom Buttons -->
		<StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
			<Button Content="Save" Width="100" Margin="5" Click="OnSave"/>
			<Button Content="Close" Width="100" Margin="5" Click="OnClose"/>
		</StackPanel>
	</DockPanel>
</Window>

