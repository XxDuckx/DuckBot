<Window x:Class="DuckBot.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DuckBot" Height="700" Width="1200"
        Background="#1e1e1e" Foreground="White">

    <DockPanel>
        <!-- Top Navigation Bar -->
        <StackPanel Orientation="Horizontal" Background="#2d2d2d" Height="45" DockPanel.Dock="Top">
            <Button Content="My Bots" Click="OnNavClick" Tag="MyBotsPage"/>
            <Button Content="Quick Start" Click="OnNavClick" Tag="QuickStartPage"/>
            <Button Content="Logs" Click="OnNavClick" Tag="LogsPage"/>
            <Button Content="Script Builder" Click="OnNavClick" Tag="ScriptBuilderPage"/>
            <Button Content="Updates" Click="OnNavClick" Tag="UpdatesPage"/>
            <Button Content="Help" Click="OnNavClick" Tag="HelpPage"/>
            <Button Content="Settings" Click="OnNavClick" Tag="SettingsPage"/>
            <Button Content="Buy Accounts" Click="OnNavClick" Tag="BuyAccountsPage"/>
            <Button Content="Promotions" Click="OnNavClick" Tag="PromotionsPage"/>
        </StackPanel>

        <!-- Main Content -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Background="#1e1e1e"/>
    </DockPanel>
</Window>
