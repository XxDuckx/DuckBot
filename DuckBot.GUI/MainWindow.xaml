<Window x:Class="DuckBot.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DuckBot"
        Height="600" Width="1000"
        Background="#1e1e1e" Foreground="White"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <!-- Sidebar -->
        <StackPanel DockPanel.Dock="Left" Width="180" Background="#2d2d2d">
            <Button Content="Instances" Margin="5" Click="OnInstances"/>
            <Button Content="Logs" Margin="5" Click="OnLogs"/>
            <Button Content="Script Builder" Margin="5" Click="OnScriptBuilder"/>
            <Button Content="Settings" Margin="5" Click="OnSettings"/>
            <Button Content="Updates" Margin="5" Click="OnUpdates"/>
            <Button Content="Help" Margin="5" Click="OnHelp"/>
        </StackPanel>

        <!-- Page content -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
